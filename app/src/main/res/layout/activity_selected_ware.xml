<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_selected_ware"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/selectedWareImage"
        android:layout_width="150pt"
        android:layout_height="150pt"
        android:layout_gravity="center"
        android:layout_marginTop="20pt"
        android:paddingTop="@dimen/margin" />

    <TextView
        android:id="@+id/selectedWareDes"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fontHeight"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/fontColor"
        android:textSize="@dimen/selected_fontSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selectedWareName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fontHeight"
            android:gravity="left"
            android:textColor="@color/fontColor"
            android:textSize="@dimen/selected_fontSize" />

        <TextView
            android:id="@+id/selectedWarePrice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fontHeight"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/fontColor"
            android:textSize="@dimen/selected_fontSize" />
    </LinearLayout>

    <Button
        android:id="@+id/pay_btn"
        android:layout_width="@dimen/commitImage"
        android:layout_height="@dimen/commitImage"
        android:layout_gravity="center"
        android:background="@drawable/commitbuy_up" />
</LinearLayout>
